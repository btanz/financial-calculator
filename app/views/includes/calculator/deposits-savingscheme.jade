script(id='deposits-savingscheme-interestInput-template', type='text/x-handlebars-template')
  div.form-group.m-l-lg
    div.row
      div.col-md-5
        h4 {{obj.count}}
      div.col-md-7
        div.input-group
          input(placeholder='', id='{{obj.id1}}', type='number', value='{{obj.val1}}', class="form-control")
          span.input-group-addon % p. a.



script(id='deposits-savingscheme-results-2-template', type='text/x-handlebars-template')
  div.ibox.float-e-margins
    div.ibox-title
      h5
        i.fa.fa-bar-chart-o.fa-lg.text-lightblue &nbsp
        | {{obj.title}}
    div.ibox-content
      div.table-responsive
        table.table.table-striped
          thead
            tr
              | {{#with obj.header}}
              th(style='text-align: left;padding:2px;') {{{this.[0]}}}
              th(style='text-align: right;padding:2px;') {{{this.[1]}}}
              th(style='text-align: right;padding:2px;') {{{this.[2]}}}
              | {{#if ../obj.tax}}
              th(style='text-align: right;padding:2px;') {{{this.[5]}}}
              th(style='text-align: right;padding:2px;') {{{this.[6]}}}
              | {{/if}}
              //th(style='text-align: right;padding:2px;') {{{this.[3]}}}
              th(style='text-align: right;padding:2px;') {{{this.[4]}}}
              | {{/with}}
          tbody
            | {{#each obj.body}}
            | {{#if this.[9]}}
            // indicates annual value
            tr
              td(style='text-align: left;padding:2px;').annualval {{this.[0]}}{{this.[8]}}
              td(style='text-align: right;padding:2px;').annualval {{numFormat this.[1] this.digits}}
              td(style='text-align: right;padding:2px;').annualval {{numFormat this.[2] this.digits}}
              | {{#if ../../obj.tax}}
              td(style='text-align: right;padding:2px;').annualval {{numFormat this.[5] this.digits}}
              td(style='text-align: right;padding:2px;').annualval {{numFormat this.[6] this.digits}}
              | {{/if}}
              //td(style='text-align: right;padding:2px;').annualval {{numFormat this.[3] this.digits}}
              td(style='text-align: right;padding:2px;').annualval {{numFormat this.[4] this.digits}}
            | {{else}}
            tr
              td(style='text-align: left;padding:2px;') {{this.[0]}}{{this.[8]}}
              td(style='text-align: right;padding:2px;') {{numFormat this.[1] this.digits}}
              td(style='text-align: right;padding:2px;') {{numFormat this.[2] this.digits}}
              | {{#if ../../obj.tax}}
              td(style='text-align: right;padding:2px;') {{numFormat this.[5] this.digits}}
              td(style='text-align: right;padding:2px;') {{numFormat this.[6] this.digits}}
              | {{/if}}
              //td(style='text-align: right;padding:2px;') {{numFormat this.[3] this.digits}}
              td(style='text-align: right;padding:2px;') {{numFormat this.[4] this.digits}}
            | {{/if}}
            | {{/each}}
