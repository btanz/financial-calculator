//- debt-repaysurrogat-template
script(id='debt-repaysurrogat-results-2-template', type='text/x-handlebars-template')
  div.ibox.float-e-margins
    div.ibox-title
      h5
        i.fa.fa-bar-chart-o.fa-lg.text-navy &nbsp
        | {{obj.title}}
    div.ibox-content
      table.table.table-striped
        thead
          tr
            | {{#with obj.header}}
            th(style='text-align: left;padding:2px; font-size:11px') {{{this.[0]}}}
            th(style='text-align: right;padding:2px; font-size:11px') {{{this.[1]}}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[2]}}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[3]}}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[4]}}}
            | {{#if ../obj.tax}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[9]}}}
            | {{/if}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[5]}}}
            th(style='text-align: right;padding:2px; font-size:11px;') {{{this.[6]}}}
            | {{/with}}
        tbody
          | {{#each obj.body}}
          | {{#if this.[7]}}
          tr
            td(style='text-align: left;padding:2px; font-size:11px;').annualval {{this.[0]}}{{this.[8]}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[1] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[2] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[3] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[4] this.digits}}
            | {{#if ../../obj.taxend}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval ({{numFormat this.[9] this.digits}})
            | {{/if}}
            | {{#if ../../obj.taxan}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[9] this.digits}}
            | {{/if}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[5] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;').annualval {{numFormat this.[6] this.digits}}

          | {{else}}
          // indicates annual value
          tr
            td(style='text-align: left;padding:2px; font-size:11px;') {{this.[0]}}
            td(style='text-align: right;padding:2px; font-size:11px;') {{numFormat this.[1] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;') {{numFormat this.[2] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;') {{numFormat this.[3] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;') ({{numFormat this.[4] this.digits}})
            | {{#if ../../obj.tax}}
            td(style='text-align: right;padding:2px; font-size:11px;') ({{numFormat this.[9] this.digits}})
            | {{/if}}
            td(style='text-align: right;padding:2px; font-size:11px;') {{numFormat this.[5] this.digits}}
            td(style='text-align: right;padding:2px; font-size:11px;') {{numFormat this.[6] this.digits}}
          | {{/if}}
          | {{/each}}